    .beneficios__section-02_box
        picture
            source(srcset="images/bottle_clean_mobile.png" media="(max-width: 767px) and (orientation: portrait)")
            source(srcset="images/bottle_clean_mobile.png" media="(max-width: 767px) and (orientation: landscape)")
